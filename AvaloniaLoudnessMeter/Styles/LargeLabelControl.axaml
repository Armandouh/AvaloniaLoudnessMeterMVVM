<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AvaloniaLoudnessMeter">
    <Design.PreviewWith>
        <Border Background="{DynamicResource DarkBlueBrush}">
            <StackPanel Margin="25">
                <controls:LargeLabelControl Margin="5" />
                <controls:LargeLabelControl Margin="5" Classes="button" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="controls|LargeLabelControl">
        <!-- Set Defaults -->
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="{DynamicResource MidBlueBrush}"></Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Width="145" Height="55" Background="{TemplateBinding Background}">
                    <StackPanel>
                        <Label HorizontalAlignment="Center" Padding="5, 4, 5, 0" FontSize="23"
                               Content="{TemplateBinding LargeText}" />
                        <Label HorizontalAlignment="Center" Padding="2" FontSize="12"
                               Content="{TemplateBinding SmallText}" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|LargeLabelControl.button">
        <!-- Set Defaults -->
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="{DynamicResource MidBlueBrush}"></Setter>
        <Setter Property="Height" Value="50"></Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <Label Padding="10, 0, 10, 0" HorizontalAlignment="Center" Height="30" CornerRadius="20"
                           Background="{TemplateBinding Background}" FontSize="23"
                           Content="{TemplateBinding LargeText}" />
                    <Label Margin="0, 2" Padding="0, 1, 0, 0" HorizontalAlignment="Center" FontSize="12"
                           Content="{TemplateBinding SmallText}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>